#/bin/sh

pgrep -x sxhkd > /dev/null || sxhkd &
killall -9 sxhkd ksuperkey

sxhkd &


# Set display from arandr saved script
[ "$1" = 0 ] && {
	~/.config/bspwm/screenlayout/laptop-screen.sh
	# Bar
	#~/.config/bspwm/bar/launch.sh &
}
sleep 1
#bspc config border_width        0
bspc config window_gap          8

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config pointer_follows_focus true
bspc config focus_follows_pointer true

#bspc rule -a Gimp desktop='^8' state=floating follow=on
#bspc rule -a Chromium desktop='^2'
#bspc rule -a firefox desktop='^2'
#bspc rule -a mplayer2 state=floating
#bspc rule -a Yad state=floating
#bspc rule -a Kupfer.py focus=on
#bspc rule -a Screenkey manage=off
#bspc rule -a Thunar state=floating follow=on focus=on
#bspc rule -a Viewnior state=floating follow=on focus=on

bspc config remove_disabled_monitors true
bspc config remove_unplugged_monitors true


# Border
# 3C3837
bspc config focused_border_color        "#212121"
bspc config normal_border_color         "#212121"
bspc config active_border_color         "#212121"
bspc config presel_feedback_color       "#b2996e"


ksuperkey -e 'Super_L=Alt_L|F1' &
ksuperkey -e 'Super_R=Alt_L|F1' &



#
# Autostart
#



# Notifications
/usr/bin/dunst &

# Polkit
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# Dex
dex -a -s /etc/xdg/autostart/:~/.config/autostart/  

# Picom
picom &

# Network Applet
nm-applet --indicator &

# Cursor
xsetroot -cursor_name left_ptr &

# Low battery notifier
~/.config/bspwm/scripts/low_bat_notifier.sh

#restore wallpaper 
nitrogen --restore &

# ~/.config/bspwm/bin/hashwall &
#killall bspborder &
#sleep 1
#~/.config/bspwm/bin/bspborder &

